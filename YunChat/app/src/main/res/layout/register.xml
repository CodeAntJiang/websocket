<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg5"
        android:layout_marginTop="-2dp"/>

    <ImageView
        android:id="@+id/go_to_login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back" />

    <ImageView
        android:layout_width="94dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/zhucelogo" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shouji"/>

        <EditText
            android:id="@+id/new_username"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:hint="手机号码..."
            android:textSize="18dp"
            android:background="@drawable/d_edit_linear"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mima2"/>

        <EditText
            android:id="@+id/new_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:hint="密码..."
            android:textSize="18dp"
            android:background="@drawable/d_edit_linear"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mima_1"/>

        <EditText
            android:id="@+id/new_password2"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:hint="确认密码..."
            android:textSize="18dp"
            android:background="@drawable/d_edit_linear"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/yanzhengma"/>

            <EditText
                android:id="@+id/check_code"
                android:layout_width="205dp"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/d_edit_linear"
                android:hint="验证码..."
                android:textSize="18dp" />

        </LinearLayout>

        <Button
            android:id="@+id/get_check_ode"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn2"
            android:text="获取"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="注册"/>
    </LinearLayout>

</LinearLayout>