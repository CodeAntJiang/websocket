<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_friend_image"
            android:layout_width="60dp"
            android:layout_height="60dp"/>


        <!--Id字段隐藏-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="65dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="姓名"
                android:textColor="#2B2828"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/last_message"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="最后一条聊天记录十一个字符"
                android:textColor="#494747"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="65dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/last_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="2020/04/10"
                android:textColor="#494747"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/unread"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:src="@drawable/hasnew6" />
        </LinearLayout>

        <TextView
            android:id="@+id/chat_friend_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="0dp"/>

    </RelativeLayout>

</RelativeLayout>